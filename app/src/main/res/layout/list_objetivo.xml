<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/textViewNomeObjetivo"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/objetivos_shape"
        android:fontFamily="sans-serif"
        android:paddingStart="25dp"
        android:paddingTop="15dp"
        android:paddingEnd="25dp"
        android:paddingBottom="15dp"
        android:text="@string/nome_obj"
        android:textAlignment="viewStart"
        android:textColor="#333"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/bordaObjetivo"
        android:layout_width="10dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewNomeObjetivo"
        app:layout_constraintEnd_toEndOf="@+id/textViewNomeObjetivo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewNomeObjetivo"
        app:layout_constraintTop_toTopOf="@+id/textViewNomeObjetivo"
        app:srcCompat="@drawable/borda_objetos_shape" />

    <Button
        android:id="@+id/maisInfoObjetivo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="3dp"
        android:background="@mipmap/ic_arrow_info"
        android:backgroundTint="#aaa"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="@+id/textViewNomeObjetivo"
        app:layout_constraintEnd_toEndOf="@+id/textViewNomeObjetivo"
        app:layout_constraintTop_toTopOf="@+id/textViewNomeObjetivo" />

</android.support.constraint.ConstraintLayout>